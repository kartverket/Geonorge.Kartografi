@using Geonorge.Kartografi.Resources
@model Geonorge.Kartografi.Models.CartographyFile

@{
    ViewBag.Title = "Detaljer";
}
@section breadcrumb {
    <li><a href="@VirtualPathUtility.ToAbsolute("~/")">@UI.CartographyRegistery</a></li>
    <li><a href="@VirtualPathUtility.ToAbsolute("~/Files/Details/")@Model.SystemId">@Model.NameTranslated()</a></li>
    <li>Detaljer</li>
}

<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="shortcut">
                @Model.NameTranslated()
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-sm-12">
        @Html.Partial("_FileData", Model)
    </div>

    <div class="col-sm-12 hidden-print">
        <hr />

        @if (ViewBag.HasAccess)
        {
            <a class="btn btn-default btn-space pull-right" href="@VirtualPathUtility.ToAbsolute("~/Files/Edit/")@Model.SystemId" style="margin-left: 15px;">@UI.Edit</a>
            <a class="btn btn-default btn-space pull-right" href="@VirtualPathUtility.ToAbsolute("~/Files/Delete/")@Model.SystemId">@UI.Delete</a>
        }
        <a class="hidden-print" href="@VirtualPathUtility.ToAbsolute("~/Files/Details/")@Model.SystemId">@UI.Back</a>

    </div>
</div>